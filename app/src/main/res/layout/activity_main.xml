<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_0.95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_0.05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="44dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/jk"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin"
        android:background="@color/yellow_v"
        android:clickable="true"
        android:elevation="@dimen/elevation"
        android:focusable="true"
        android:padding="@dimen/padding"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@id/j"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/center_guide"
        app:layout_constraintTop_toBottomOf="@+id/top_0.05"
        app:layout_constraintWidth_percent="0.4">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/jk" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="@color/white"
            android:gravity="end"
            android:paddingEnd="8dp"
            android:text="Jung Kook"
            android:textColor="@color/purple_700" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/v"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin"
        android:background="@color/purple_700"
        android:clickable="true"
        android:elevation="@dimen/elevation"
        android:focusable="true"
        android:padding="@dimen/padding"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@id/jm"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toLeftOf="@id/center_guide"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.4">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/v" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="@color/white"
            android:gravity="center"
            android:text="V"
            android:textColor="@color/yellow_v" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/j"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin"
        android:background="@color/purple_700"
        android:clickable="true"
        android:elevation="@dimen/elevation"
        android:focusable="true"
        android:padding="@dimen/padding"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@id/j_h"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/center_guide"
        app:layout_constraintTop_toBottomOf="@id/jk"
        app:layout_constraintWidth_percent="0.4">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/j" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="@color/white"
            android:gravity="center"
            android:text="Jin"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/jm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin"
        android:background="@color/yellow_v"
        android:clickable="true"
        android:elevation="@dimen/elevation"
        android:focusable="true"
        android:padding="@dimen/padding"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@id/sg"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toLeftOf="@id/center_guide"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v"
        app:layout_constraintWidth_percent="0.4">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/jm" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="@color/white"
            android:gravity="center"
            android:text="Jimin"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/j_h"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin"
        android:background="@color/purple_700"
        android:clickable="true"
        android:elevation="@dimen/elevation"
        android:focusable="true"
        android:padding="@dimen/padding"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@id/rm"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/center_guide"
        app:layout_constraintTop_toBottomOf="@id/j"
        app:layout_constraintWidth_percent="0.4">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/j_h" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="@color/white"
            android:gravity="center"
            android:text="J-hop"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/sg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/yellow_v"
        android:clickable="true"
        android:elevation="@dimen/elevation"
        android:focusable="true"
        android:padding="@dimen/padding"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_0.95"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toLeftOf="@id/center_guide"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jm"
        app:layout_constraintWidth_percent="0.4">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/sg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="@color/white"
            android:gravity="center"
            android:text="Suga"
            android:textColor="@color/purple_700" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/rm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin"
        android:background="@color/yellow_v"
        android:clickable="true"
        android:elevation="@dimen/elevation"
        android:focusable="true"
        android:padding="@dimen/padding"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/j_h"
        app:layout_constraintWidth_percent="0.4">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/rm" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="@color/white"
            android:gravity="start"
            android:paddingStart="8dp"
            android:text="RM"
            android:textColor="@color/red_rm" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>